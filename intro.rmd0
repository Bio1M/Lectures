```{r make_lachdat,message=FALSE,warning=FALSE}
lachDat <- read.csv("data/lach.dat",check.names=FALSE,stringsAsFactors=FALSE)
lachDat$desc2 <- sapply(
    gsub("Scientists should","",lachDat$description),
    function(x) paste(strwrap(x,width=35),collapse="\\n"))
mm <- reshape2::melt(subset(lachDat,select=-c(description,Fstat)),
           id.vars=c("role","desc2"))
ff <- function(x,rev=FALSE) {
    u <- unique(as.character(x))
    factor(x,levels=if (!rev) u else rev(u))
}
mm <- transform(mm,
                role=ff(role),
                description=ff(desc2,rev=TRUE))
gg_lach <- ggplot(mm,aes(x=description,y=value,colour=variable,shape=variable))+
    geom_point(size=5,alpha=0.8)+
    geom_line(aes(group=variable))+
    ## geom_bar(stat="identity",position="dodge")+
    coord_flip()+
    scale_y_continuous(limits=c(1,5),
                       breaks=1:5,
                       labels=c("strongly\\ndisagree",
                       "disagree",
                       "neutral",
                       "agree",
                       "strongly\\nagree"))+
    labs(x="",y="")+
    scale_colour_brewer(name="group",palette="Dark2")+
    scale_shape_discrete(name="group")
ggsave(plot=gg_lach,filename="bmbpix/lachdat.png",width=6,height=4)
```

